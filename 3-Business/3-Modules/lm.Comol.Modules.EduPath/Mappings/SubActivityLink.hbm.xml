<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="lm.Comol.Modules.EduPath" namespace="lm.Comol.Modules.EduPath.Domain">
  <class name="SubActivityLink" table="EP_SubActivityLink" optimistic-lock ="version">
    <id name="Id" column="Id" type="Int64">
      <generator class="native"/>
    </id>
    <version name="TimeStamp"
   generated="always"
   unsaved-value="null"
   type="BinaryBlob">
      <column name="_Timestamp"
              not-null="false"
              sql-type="timestamp"/>
    </version>

    <many-to-one name="SubActivity" class="SubActivity" column="IdSubActivity" foreign-key="IdSubActivity" cascade="none" />
    <property name="IdObject" type="Int64" column="IdObject" />
    <property name="IdModule" type="Int64" column="IdModule" />
    <property name="ContentType" type="SubActivityLinkType" column="ContentType" />
    <property name="Mandatory" type="Boolean" column="Mandatory" />
    <property name="Visible" type="Boolean" column="Visible" />

    <property name="Deleted" type="lm.Comol.Core.DomainModel.BaseStatusDeleted,lm.Comol.Core.DomainModel" column="_Deleted" />
    <property name="IdModifiedBy" type="Int32" column="_ModifiedBy" />
    <property name="CreatedOn" type="DateTime" column="_CreatedOn" />
    <property name="ModifiedOn" type="DateTime" column="_ModifiedOn" />
    <property name="IdCreatedBy" type="Int32" column="_CreatedBy" />
    <property name="CreatorProxyIpAddress" type="String" column="_CreatedProxyIPaddress" />
    <property name="CreatorIpAddress" type="String" column="_CreatedIPaddress" />
    <property name="ModifiedProxyIpAddress" type="String" column="_ModifiedProxyIPaddress" />
    <property name="ModifiedIpAddress" type="String" column="_ModifiedIPaddress" />
  </class>
</hibernate-mapping>
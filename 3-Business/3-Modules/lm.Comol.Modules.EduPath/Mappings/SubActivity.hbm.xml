<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="lm.Comol.Modules.EduPath" namespace="lm.Comol.Modules.EduPath.Domain">
    <class name="SubActivity" table="EP_SubActivity" optimistic-lock ="version">
        <id name="Id" column="Id" type="Int64">
            <generator class="native"/>
        </id>
        <version name="TimeStamp"
       generated="always"
       unsaved-value="null"
       type="BinaryBlob">
            <column name="_Timestamp"
                    not-null="false"
                    sql-type="timestamp"/>
        </version>
        <property name="Name" type="String" column="Name" />
        <property name="Description" type="String" column="Description" />
        <property name="DisplayOrder" type="Int16" column="DisplayOrder" />
        <property name="ContentType" type="SubActivityType" column="ContentType" />
        <property name="Link" type="String" column="Link" />
        <property name="IdObjectLong" type="Int64" column="IdObjectLong" />
        <property name="IdObjectVersion" type="Int64" column="IdObjectVersion" />
        <property name="IdObjectGuid" type="Guid" column="IdObjectGuid" />
        <property name="IdModuleAction" type="Int32" column="IdModuleAction" />
        <property name="IdModule" type="Int32" column="IdModule" />
        <property name="CodeModule" type="String" column="CodeModule" />
        <property name="ContentPermission" type="Int64" column="ContentPermission" />
        <property name="Status" type="Status" column="Status" />
        <many-to-one name="ParentActivity" class="Activity, lm.Comol.Modules.EduPath.Domain.Activity, lm.Comol.Modules.EduPath, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null" column="IdActivity" foreign-key="IdActivity" cascade="none" />
        <property name="Weight" type="Int64" column="Weight" />
      <property name="Duration" type="Int64" column="Duration" />

      <property name="IdCertificate" type="Int64" column="IdCertificate" />
      <property name="IdCertificateVersion" type="Int64" column="IdCertificateVersion" />
      <property name="AutoGenerated" type="Boolean" column="AutoGenerated" />
      <property name="SaveCertificate" type="Boolean" column="SaveCertificate" />
      <property name="ActiveOnMinCompletion" type="Boolean" column="ActiveOnMinCompletion" />
      <property name="ActiveOnMinMark" type="Boolean" column="ActiveOnMinMark" />
      <property name="UsePathEndDateStatistics" type="Boolean" column="UsePathEndDateStatistics" />
      <property name="ActiveAfterPathEndDate" type="Boolean" column="ActiveAfterPathEndDate" />
      <property name="AllowWithEmptyPlaceHolders" type="Boolean" column="AllowWithEmptyPlaceHolders" />
      
      <bag cascade="none" inverse="true" name="SubActivityLinks" table="EP_SubActivityLink">
        <key column="IdSubActivity"  />
        <one-to-many class="SubActivityLink"/>
      </bag>
      <property name="Display" column="DisplayPolicy" type="lm.Comol.Modules.EduPath.Domain.DisplayPolicy,lm.Comol.Modules.EduPath" />
      <property name="Deleted" type="lm.Comol.Core.DomainModel.BaseStatusDeleted,lm.Comol.Core.DomainModel" column="_Deleted" />
      <property name="IdModifiedBy" type="Int32" column="_ModifiedBy" />
      <property name="CreatedOn" type="DateTime" column="_CreatedOn" />
      <property name="ModifiedOn" type="DateTime" column="_ModifiedOn" />
      <property name="IdCreatedBy" type="Int32" column="_CreatedBy" />
      <property name="CreatorProxyIpAddress" type="String" column="_CreatedProxyIPaddress" />
      <property name="CreatorIpAddress" type="String" column="_CreatedIPaddress" />
      <property name="ModifiedProxyIpAddress" type="String" column="_ModifiedProxyIPaddress" />
      <property name="ModifiedIpAddress" type="String" column="_ModifiedIPaddress" />
        <many-to-one name="Community" class="lm.Comol.Core.DomainModel.liteCommunity" column="IdCommunity" foreign-key="IdCommunity" cascade="none"  />
        <many-to-one name="ModuleLink" class="lm.Comol.Core.DomainModel.ModuleLink" column="IdModuleLink" foreign-key="IdModuleLink" cascade="none" lazy="proxy"  />
        <many-to-one name="Path" class="lm.Comol.Modules.EduPath.Domain.Path" column="IdPath" foreign-key="IdPath" cascade="none" />

    </class>
</hibernate-mapping>